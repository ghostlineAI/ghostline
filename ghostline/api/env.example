# GhostLine Local Development Environment
# Copy to .env: cp env.example .env

# Database Configuration (matches docker-compose.yml)
DATABASE_URL=postgresql://ghostline:ghostline@localhost:5432/ghostline

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security (local dev only - change in production)
SECRET_KEY=local-dev-secret-key-not-for-production

# Environment
ENVIRONMENT=local

# Local file storage (instead of S3)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# CORS - Allow local frontend
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Auth bypass for local development (no login required)
AUTH_DISABLED=true

# Optional: AWS Configuration (leave empty for local dev)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-west-2
# S3_SOURCE_MATERIALS_BUCKET=
# S3_OUTPUTS_BUCKET=

# Optional: AI Model Keys (for actual generation)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
